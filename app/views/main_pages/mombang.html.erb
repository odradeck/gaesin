  <%= simple_form_for Contact.new do |f| %>
  <div class="modal-body">
    <%= f.input :name, :label=>"이름" %>
    <%= f.input :email, :label=>"이메일" %>
    <%= f.input :contact_type, :as => :hidden, :input_html => { :value => "mombang_apply" } %>
