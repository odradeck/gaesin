<%- model_class = Board -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @board.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin_user_id) %>:</strong></dt>
  <dd><%= @board.admin_user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @board.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:roles_mask) %>:</strong></dt>
  <dd><%= @board.roles_mask %></dd>
  <dt><strong><%= model_class.human_attribute_name(:board_type) %>:</strong></dt>
  <dd><%= @board.board_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:show) %>:</strong></dt>
  <dd><%= @board.show %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @board.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              boards_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_board_path(@board), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              board_path(@board),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
